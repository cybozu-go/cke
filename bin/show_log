#!/bin/sh -e

chmod 600 ./mtest/mtest_key
$GCLOUD 2>/dev/null compute scp --zone=${ZONE} ./mtest/mtest_key ./mtest/ssh_config cybozu@${INSTANCE_NAME}

echo "-------- host1: cke log"
$GCLOUD 2>/dev/null compute ssh --zone=${ZONE} cybozu@${INSTANCE_NAME} -- \
 ./mtest_key cybozu@${HOST1} -- sudo journalctl -u cke.service --no-pager
echo "-------- host2: cke log"
$GCLOUD 2>/dev/null compute ssh --zone=${ZONE} cybozu@${INSTANCE_NAME} -- \
 ./mtest_key cybozu@${HOST2} -- sudo journalctl -u cke.service --no-pager

RET=$?

exit $RET
